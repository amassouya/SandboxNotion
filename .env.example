# ────────────────────────────────────────────────
#  SandboxNotion – Example Environment Variables
#  Rename this file to `.env` and replace the
#  placeholder values with your real credentials.
# ────────────────────────────────────────────────

# === OpenAI =====================================
OPENAI_API_KEY="sk-REPLACE_ME"

# === Firebase ===================================
# Public Web config (appears in client bundle)
FIREBASE_WEB_API_KEY="AIzaSyDUMMY-REPLACE-ME"
FIREBASE_PROJECT_ID="sandboxnotion"
FIREBASE_APP_ID_WEB="1:889983767784:web:XXXXXXXXXXXXXXXXXXXX"
FIREBASE_MEASUREMENT_ID="G-XXXXXXXXXX"

# Service account JSON (Base64-encoded string or absolute file path)
# Used only on server/CI for deploying and callable functions.
FIREBASE_SERVICE_ACCOUNT_BASE64="eyAi..."  # OR
# FIREBASE_SERVICE_ACCOUNT_PATH="/Users/you/.sandboxnotion/serviceAccount-sandbox.json"

# Optional – Firebase CLI auth token for CI deploys
FIREBASE_CLI_TOKEN="FIREBASE_CLI_TOKEN_REPLACE_ME"

# === Firebase App Check =========================
# reCAPTCHA v3 site key for Web
RECAPTCHA_V3_SITE_KEY="RECAPTCHA_SITE_KEY_REPLACE_ME"
# Play Integrity token for Android debug builds (optional)
PLAY_INTEGRITY_TOKEN="PLAY_INTEGRITY_TOKEN_REPLACE_ME"

# === Google Payments ============================
# Google Pay merchant ID for Web payments
GOOGLE_PAY_MERCHANT_ID="01234567890123456789"
# Google Play public license key for Android in-app purchases
GOOGLE_PLAY_LICENSE_KEY="YOUR_GOOGLE_PLAY_LICENSE_KEY"

# === Stripe (not used but reserved) =============
# STRIPE_PUBLISHABLE_KEY="pk_live_xxx"
# STRIPE_SECRET_KEY="sk_live_xxx"

# === App Metadata ===============================
APP_ENV="development"         # development | staging | production
APP_VERSION="1.0.0"
API_TIMEOUT_SECONDS=30        # Default HTTP timeout

# === Logging ====================================
LOG_LEVEL="debug"             # debug | info | warning | error | fatal
